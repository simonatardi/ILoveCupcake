<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >


    <TextView
        android:id="@+id/tNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
         android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/eNumpersone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tNome"
        android:layout_alignStart="@+id/tNome"
        android:layout_below="@+id/tNome"
        android:layout_marginTop="36dp"
        android:ems="6"
        android:hint="@string/n_persone"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/salvaDosi"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eNumpersone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="22dp"
        android:text="@string/salvaing" />

    <TextView
        android:id="@+id/tIngred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eNumpersone"
        android:layout_alignStart="@+id/eNumpersone"
        android:layout_below="@+id/eNumpersone"
        android:layout_marginTop="17dp" />

</RelativeLayout>